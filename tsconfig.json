{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "stripInternal": true,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "./src/index.ts"
  ]
}